{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "amount": {
      "type": "integer",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "INR"
    },
    "currentStatus": {
      "type": "enumeration",
      "required": false,
      "default": "created",
      "enum": [
        "created",
        " paid",
        " failed",
        "refunded"
      ]
    },
    "razorpay_order_id": {
      "type": "string",
      "required": true
    },
    "razorpay_payment_id": {
      "type": "string"
    },
    "razorpay_signature": {
      "type": "string"
    },
    "receipt": {
      "type": "string"
    },
    "notes": {
      "type": "json"
    },
    "full_name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "shipping_address": {
      "type": "text",
      "required": true
    },
    "additional_message": {
      "type": "text"
    },
    "phone_number": {
      "type": "string",
      "required": true
    },
    "company": {
      "type": "string"
    },
    "number_of_samples": {
      "type": "integer",
      "required": true
    }
  }
}
